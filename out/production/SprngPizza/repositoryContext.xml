<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.epam.pizza.repository"/>

    <bean name="pizzaRepository" class="com.epam.pizza.repository.TestPizzaRepository" init-method="init">

        <property name="pizzas">
            <list>
                <bean class="com.epam.pizza.domain.Pizza">
                    <constructor-arg value="1"/>
                    <constructor-arg value="Sea"/>
                    <constructor-arg value="300"/>
                    <constructor-arg>
                        <value type="com.epam.pizza.domain.PizzaType">SEA</value>
                    </constructor-arg>
                </bean>
                <bean class="com.epam.pizza.domain.Pizza">
                    <constructor-arg value="2"/>
                    <constructor-arg value="Meat"/>
                    <constructor-arg value="400"/>
                    <constructor-arg>
                        <value type="com.epam.pizza.domain.PizzaType">MEAT</value>
                    </constructor-arg>
                </bean>
                <bean class="com.epam.pizza.domain.Pizza">
                    <constructor-arg value="3"/>
                    <constructor-arg value="Veg"/>
                    <constructor-arg value="500"/>
                    <constructor-arg>
                        <value type="com.epam.pizza.domain.PizzaType">VEGETERIAN</value>
                    </constructor-arg>
                </bean>
            </list>
        </property>
    </bean>

    <!--<bean name="orderRepository" class="com.epam.pizza.repository.TestOrderRepository"/>-->


</beans>